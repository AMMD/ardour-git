#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require_relative '../lib/ardour_git_cli'

class App
  include Methadone::Main
  include Methadone::CLILogging

  main do |keyword|
    exit_now! 'keyword required' if keyword.nil?
    ArdourGitCli.new.command(keyword.dup)
  end

  description 'Version an Ardour project with git'

  on('-i', '--init', 'Initialize a new repository for current ardour project')

  go!
end
